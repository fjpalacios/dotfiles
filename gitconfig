[user]
    name = Javi Palacios
    email = javi@fjp.es
    signingkey = 65A58C24

[core]
    editor = vim
    excludesfile = ~/.gitexcludes

[diff]
    tool = vimdiff

[merge]
    tool = vimmerge

[alias]
    this = !git init && git add . && git commit -S -m \"Initial commit\"
    hide = update-index --assume-unchanged
    unhide = update-index --no-assume-unchanged
    hidden = !git ls-files -v | grep --color "^h" | cut -c 3-
    skip = update-index --skip-worktree
    noskip = update-index --no-skip-worktree
    skipped = !git ls-files -v | grep --color "^S" | cut -c 3-
    ignore = !sh -c 'echo $1 >> .gitignore' -
    ignored = !cat .gitignore
    lod = log --oneline --decorate --abbrev-commit --graph
    c = commit -S
    co = checkout
    cb = checkout -b
    cd = branch -d

[color]
    ui = always

[filter "lfs"]
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
	clean = git-lfs clean -- %f

[gpg]
    program = /usr/local/bin/gpg
